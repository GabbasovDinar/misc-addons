<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_productlabel" inherit_id="product.report_productlabel">
            <xpath expr="//t[@t-call='product.report_simple_label']" position="replace">
                <t t-if="product.default_label_id">
                    <t t-raw="product.get_render_qweb()"></t>
                </t>
                <t t-if="not product.default_label_id">
                    <t t-call="product.report_simple_label">
                        <t t-set="product" t-value="product"/>
                    </t>
                </t>
            </xpath>
        </template>

        <template id="report_producttemplatelabel" inherit_id="product.report_producttemplatelabel">
            <xpath expr="//t[@t-call='product.report_simple_label']" position="replace">
                <t t-if="product.default_label_id">
                    <t t-raw="product.get_render_qweb()"></t>
                </t>
                <t t-if="not product.default_label_id">
                    <t t-call="product.report_simple_label">
                        <t t-set="product" t-value="product"/>
                    </t>
                </t>
            </xpath>
        </template>
    </data>
</odoo>
